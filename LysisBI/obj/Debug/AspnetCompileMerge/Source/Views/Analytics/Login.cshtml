@model LysisBI.Models.UsuarioModel

@{
    ViewBag.Title = "Index";
    Layout = null;
}


<!DOCTYPE HTML>
<html>
<head>
    <title>Lysis Analytics</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
    <link rel="stylesheet" href="~/Content/login/assets/css/main.css" />
    <noscript><link rel="stylesheet" href="~/Content/login/assets/css/noscript.css" /></noscript>
    <link rel="shortcut icon" href="favicon.ico" />
</head>
<body class="is-preload">


    <div id="wrapper" class="align-center">


        <section class="banner style2 content-align-center fullscreen onload-image-fade-in">
            <div class="content">

                <h2>Lysis Analytics</h2>


                @using (Html.BeginForm())

                {
                    <div class="fields">
                        <div class="field half">
                            @Html.TextBoxFor(m => m.UsuarioAcesso, new { @class = "field half", @placeholder = "Usuário" })
                            <br />

                            @Html.TextBoxFor(m => m.Senha, new { @class = "field half", @placeholder = "Senha", type = "password" })

                        </div>
                    </div>
                    <ul class="actions stacked">
                        <li><input type="submit" value="OK" class="button big wide smooth-scroll-middle" /> </li>
                        @ViewBag.msgErro
                    </ul>
                }

            </div>
            <div class="image">
                <img src="~/Content/login/images/banner.jpg" alt="" />
            </div>

        </section>
    </div>


    <!-- Scripts -->
    <script src="~/Content/login/assets/js/jquery.min.js"></script>
    <script src="~/Content/login/assets/js/jquery.scrollex.min.js"></script>
    <script src="~/Content/login/assets/js/jquery.scrolly.min.js"></script>
    <script src="~/Content/login/assets/js/browser.min.js"></script>
    <script src="~/Content/login/assets/js/breakpoints.min.js"></script>
    <script src="~/Content/login/assets/js/util.js"></script>
    <script src="~/Content/login/assets/js/main.js"></script>

</body>
</html>





